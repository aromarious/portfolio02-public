{
  "name": "@aromarious/scripts",
  "version": "0.0.0",
  "private": true,
  "description": "Development and analysis scripts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "format:fix": "prettier --write . --ignore-path ../../.gitignore",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@types/node": "^25.0.3",
    "prettier": "catalog:",
    "tsx": "^4.21.0",
    "typescript": "catalog:"
  }
}
